                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"


                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView



                                android:layout_height="30dp"

                                android:layout_width="80dp"

                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="50dp"
                                android:gravity="center_vertical|center_horizontal"

                                android:textColor="#fff"
                                android:background="@drawable/bg_notselected"
                                android:layout_alignParentBottom="true"
                                android:text="1"></TextView>


                            <TextView



                                android:background="@drawable/bg_form_rounded"
                                android:layout_height="40dp"

                                android:layout_width="80dp"

                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="180dp"
                                android:gravity="center_vertical|center_horizontal"

                                android:textColor="#fff"
                                android:text="2"></TextView>
                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            card_view:cardBackgroundColor="@color/white"
                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="3dp"
                            >

                            <LinearLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="10dip"
                                android:paddingRight="10dip"
                                android:paddingBottom="10dip"
                                android:paddingTop="10dip"


                                >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/textViewcv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dip"
                                        android:text="Recipient Name:"
                                        android:textStyle="bold"
                                        android:layout_centerHorizontal="true"
                                        android:textSize="@dimen/textsize"
                                        android:textColor="@color/colorPrimary"
                                        android:layout_gravity="left|center"
                                        android:layout_weight="1"

                                        />
                                    <TextView
                                        android:id="@+id/recname"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/textViewcv"
                                        android:layout_marginTop="5dip"
                                        android:layout_centerHorizontal="true"

                                        android:textSize="13sp"
                                        android:text="N/A"
                                        android:textColor="@color/nbkyellow"

                                        />

                                </RelativeLayout>
                                <RelativeLayout


                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_margin="5dp"
                                    android:visibility="gone"

                                    >
                                    <TextView
                                        android:id="@+id/acbalance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dip"
                                        android:text="Agent Balance"
                                        android:textSize="@dimen/textsize"
                                        android:textColor="@color/black" />
                                    <TextView
                                        android:id="@+id/txtacbal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dip"

                                        android:layout_alignParentRight = "true"
                                        android:text=""
                                        android:textSize="@dimen/textsize"
                                        android:textColor="#3C2415" />

                                </RelativeLayout>
                                <RelativeLayout


                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_margin="5dp"


                                    >
                                    <TextView
                                        android:id="@+id/textViewnb"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:text="Account Number"

                                        android:textSize="@dimen/textsize"
                                        android:textColor="@color/colorPrimary"
                                        android:textStyle="bold"/>
                                    <TextView
                                        android:id="@+id/recacno"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:textColor="@color/colorPrimary"

                                        android:layout_alignParentRight = "true"
                                        android:text=""
                                        android:textSize="@dimen/textsize"
                                       />

                                </RelativeLayout>




                                <RelativeLayout


                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:id="@+id/rlem"
                                    android:layout_margin="5dp"


                                    >
                                    <TextView
                                        android:id="@+id/textViewrd"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:textStyle="bold"
                                        android:text="Amount:"
                                        android:textSize="@dimen/textsize"
                                        android:textColor="@color/colorPrimary" />

                                    <TextView
                                        android:id="@+id/recamo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:layout_marginLeft="15dip"
                                        android:layout_alignParentRight = "true"
                                        android:textColor="@color/colorPrimary"
                                        android:textStyle="bold"
                                        android:text=""
                                        android:textSize="@dimen/textsize"
                                        />

                                </RelativeLayout>
                                <RelativeLayout


                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:id="@+id/rlfee"
                                    android:layout_margin="5dp"


                                    >
                                    <TextView
                                        android:id="@+id/textViewfee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dip"
                                        android:text="Fee:"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/textsize"
                                        android:textColor="@color/colorPrimary" />
                                    <TextView
                                        android:id="@+id/txtfee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dip"
                                        android:layout_marginLeft="15dip"
                                        android:layout_alignParentRight = "true"
                                        android:textStyle="bold"
                                        android:text="\u20A6 0.00"
                                        android:textSize="@dimen/textsize"
                                        android:textColor="@color/colorPrimary" />

                                </RelativeLayout>
                                <RelativeLayout


                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:id="@+id/rlgend"
                                    android:layout_margin="5dp"


                                    >
                                    <TextView
                                        android:id="@+id/textViewr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:textStyle="bold"
                                        android:text="Narration:"
                                        android:textSize="@dimen/textsize"
                                        android:textColor="@color/colorPrimary" />
                                    <TextView
                                        android:id="@+id/recnarr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:layout_marginLeft="15dip"
                                        android:textStyle="bold"
                                        android:layout_alignParentRight = "true"
                                        android:text=""
                                        android:textSize="@dimen/textsize"
                                        android:textColor="@color/colorPrimary" />

                                </RelativeLayout>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/rl7"
                            android:layout_marginTop="10dp"
                            android:id="@+id/rl5"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/input_pin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/pin"
                                    android:layout_below="@+id/textView5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="5"
                                    android:ems="10"

                                    android:inputType="numberPassword"
                                    android:layout_margin="10dp"
                                    android:hint="Enter Attendant PIN" />

                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/rl5"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/button2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/nextbutton"
                                android:padding="5dp"
                                android:text="CONFIRM"
                                android:filterTouchesWhenObscured ="true"
                                android:layout_marginTop="10dip"
                                android:layout_marginBottom="10dip"
                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/gobutton"
                                android:layout_below="@+id/button2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/mybutton"
                                android:padding="5dp"
                                android:text="GO BACK"
                                android:visibility="gone"
                                android:filterTouchesWhenObscured ="true"
                                android:layout_marginTop="10dip"
                                android:layout_marginBottom="10dip"
                                android:textColor="@color/white" />
                        </RelativeLayout>





                    </LinearLayout>

                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>