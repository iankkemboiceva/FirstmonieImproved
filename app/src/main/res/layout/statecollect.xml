<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:filterTouchesWhenObscured="true"
    android:gravity="left"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"


            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layl"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lylcal"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_horizontal"
                            android:id="@+id/lin"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:orientation="horizontal">
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:layout_weight="2"
                                android:background="@drawable/mybutton"
                                android:backgroundTint="@color/dark_btncolor"
                                android:textStyle="bold"
                                android:layout_marginTop="14dp"
                                android:id="@+id/tv2"
                                android:textColor="@color/white"
                                android:text="1"
                                />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:text="2"
                                android:id="@+id/tv"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/views_marginleft"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_marginTop="14dp"
                                android:backgroundTint="@color/dark_btncolor"
                                android:background="@drawable/mybutton" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:layout_weight="2"
                                android:text="3"
                                android:layout_marginLeft="@dimen/views_marginleft"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:backgroundTint="@color/theme_paybills"
                                android:background="@drawable/mybutton" />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="55dp"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/views_marginleft"
                                android:text="4"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_marginTop="14dp"
                                android:backgroundTint="@color/dark_btncolor"
                                android:background="@drawable/mybutton" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rlag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="30dp"

                                android:text=""

                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <LinearLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingLeft="5dip"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:paddingTop="1dip"
                            android:paddingRight="5dip"
                            android:paddingBottom="5dip">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/smcno"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"
                                    android:text="Smartcard Number"
                                    android:textColor="@color/black" />

                                <EditText
                                    android:id="@+id/acc"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"

                                    android:background="@android:color/transparent"
                                    android:hint="Smartcard Number"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/theme_paybills" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"
                                    android:text="Amount (\u20A6)"
                                    android:textColor="@color/black" />

                                <EditText
                                    android:id="@+id/amount"
                                    android:layout_width="0dp"


                                    android:layout_height="wrap_content"

                                    android:layout_below="@+id/textView4"
                                    android:layout_gravity="left|center"
                                    android:layout_margin="10dp"


                                    android:layout_weight="2"
                                    android:background="@android:color/transparent"
                                    android:ems="10"
                                    android:hint="Amount"
                                    android:inputType="numberDecimal"

                                    android:textSize="14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/theme_paybills" />

                            <RelativeLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical"


                                >

                                <TextView
                                    android:id="@+id/state"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Choose Market"
                                    android:textColor="@color/black"


                                    />

                                <Spinner
                                    android:id="@+id/spin3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="-10dp"
                                    android:layout_below="@+id/state">

                                </Spinner>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_below="@+id/spin3"
                                    android:layout_marginRight="0dp"
                                    android:background="@color/theme_paybills" />
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingLeft="5dip"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:paddingTop="1dip"
                            android:paddingRight="5dip"
                            android:paddingBottom="5dip"


                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"
                                    android:text="Payer Name"
                                    android:textColor="@color/black" />

                                <EditText
                                    android:id="@+id/sendname"
                                    android:layout_width="0dp"

                                    android:layout_height="wrap_content"

                                    android:layout_below="@+id/textView5"

                                    android:layout_gravity="left|center"

                                    android:layout_weight="2"


                                    android:background="@android:color/transparent"
                                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                    android:ems="10"
                                    android:hint="Payer Name"
                                    android:inputType="text"

                                    android:textSize="14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/theme_paybills" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"
                                    android:text="@string/sendnum"
                                    android:textColor="@color/black" />

                                <EditText
                                    android:id="@+id/sendnumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView5"
                                    android:layout_gravity="left|center"
                                    android:layout_margin="5dip"
                                    android:layout_weight="2"

                                    android:background="@android:color/transparent"


                                    android:digits="0123456789+"
                                    android:ems="10"
                                    android:hint="@string/sendnum"
                                    android:inputType="number"
                                    android:maxLength="13"

                                    android:textSize="14sp" />
                            </LinearLayout>


                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl5">

                            <Button
                                android:id="@+id/button2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dip"
                                android:layout_marginRight="30dp"
                                android:background="@drawable/mybutton"
                                android:padding="5dp"
                                android:text="Next"
                                android:backgroundTint="@color/dark_btncolor"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/button3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dip"
                                android:layout_marginRight="30dp"
                                android:layout_below="@+id/button2"
                                android:backgroundTint="@color/theme_paybills"
                                android:background="@drawable/mybutton"
                                android:padding="5dp"
                                android:text="Go Back"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />
                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>