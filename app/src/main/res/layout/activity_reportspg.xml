<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/greybg"
    android:layout_height="match_parent"
    tools:context=".Reportspg">
    <include layout="@layout/toolbarnewui"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/Selectoptiontext"
        android:layout_marginTop="30dp"
        android:paddingLeft="6sp"
        />
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        android:layout_marginTop="40dp"
        android:id="@+id/myPermance"
        android:clickable="true"
        card_view:cardElevation="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graphical Report Summary"
            android:paddingLeft="30dp"
            android:layout_gravity="center_vertical"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        android:clickable="true"
        android:layout_marginTop="20dp"
        card_view:cardElevation="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary on Email"
            android:paddingLeft="30dp"
            android:layout_gravity="center_vertical"
            />
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            android:layout_marginTop="28dp"
            android:id="@+id/inboxbtn"
            android:layout_marginBottom="5dp"
            card_view:cardElevation="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous Day"
                android:paddingLeft="30dp"
                android:layout_gravity="center_vertical"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            android:layout_marginTop="28dp"
            android:id="@+id/monthdtsumm"
            android:layout_marginBottom="5dp"
            card_view:cardElevation="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month to Date Summary"
                android:paddingLeft="30dp"
                android:layout_gravity="center_vertical"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            android:layout_marginTop="28dp"
            android:id="@+id/lastweeksumm"
            android:layout_marginBottom="5dp"
            card_view:cardElevation="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Week Summary"
                android:paddingLeft="30dp"
                android:layout_gravity="center_vertical"
                />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"

            />

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            android:layout_marginTop="28dp"
            android:id="@+id/spec"
            android:layout_marginBottom="5dp"
            card_view:cardElevation="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Specify Date Range for Summary"
                android:paddingLeft="30dp"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/lystat"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/startt"

                    android:layout_height="wrap_content"
                    android:layout_width="70dp"
                    android:layout_marginLeft="30dp"

                    android:text="Start Date:"

                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txfromdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_marginLeft="10dp"

                    android:text="Start Date:"


                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="match_parent"



                    android:gravity="right"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/calendarbtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_marginRight="20dp"

                        android:background="@drawable/bluecalendar"


                        android:textColor="#ffffff" />
                </RelativeLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

android:layout_marginTop="10dp"
                    android:id="@+id/lyend"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="70dp"
                        android:layout_height="wrap_content"



                        android:text="End Date:"
                        android:layout_marginLeft="30dp"


                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/txtenddat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"



                        android:text="End Date:"

                        android:textSize="13sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"



                        android:gravity="right"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/calendarbto"
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:layout_marginRight="20dp"

                            android:background="@drawable/bluecalendar"




                            android:textColor="#ffffff" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/genrpt"
                    android:background="@drawable/btn_theme_dark"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generate Report"
                        android:textColor="@color/white"
                        />


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout></LinearLayout>