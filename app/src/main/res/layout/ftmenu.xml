                                <ListView
                                    android:id="@+id/lv"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"


                                    android:divider="@color/divcolor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>
