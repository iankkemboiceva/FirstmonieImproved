<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greybg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbarnewui" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"


            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layl"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lylcal"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rlag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:text="Please proceed to change your first time pin"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <LinearLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingLeft="5dip"
                            android:paddingTop="1dip"
                            android:paddingRight="5dip"
                            android:paddingBottom="5dip">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="1.2"
                                    android:text="Current PIN"
                                    android:textColor="@color/black" />

                                <EditText
                                    android:id="@+id/oldpin"
                                    android:layout_width="0dp"


                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView4"
                                    android:layout_gravity="left|center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="2"


                                    android:background="@android:color/transparent"
                                    android:ems="10"
                                    android:hint="Enter Current Pin"
                                    android:inputType="numberPassword"
                                    android:maxLength="5"

                                    android:textSize="14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/divcolor" />
                        </LinearLayout>

                        <LinearLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"

                            android:orientation="vertical"
                            android:paddingLeft="5dip"
                            android:paddingTop="1dip"
                            android:paddingRight="5dip"
                            android:paddingBottom="5dip"


                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="1.2"
                                    android:text="PIN"
                                    android:textColor="@color/black" />

                                <EditText
                                    android:id="@+id/pin"
                                    android:layout_width="0dp"


                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView4"
                                    android:layout_gravity="left|center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="2"


                                    android:background="@android:color/transparent"
                                    android:ems="10"
                                    android:hint="Enter new PIN"
                                    android:inputType="numberPassword"
                                    android:maxLength="5"

                                    android:textSize="14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/divcolor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="1.2"
                                    android:text="Confirm PIN"
                                    android:textColor="@color/black" />

                                <EditText
                                    android:id="@+id/cpin"
                                    android:layout_width="0dp"


                                    android:layout_height="wrap_content"

                                    android:layout_below="@+id/textView5"
                                    android:layout_gravity="left|center"
                                    android:layout_margin="10dp"
                                    android:layout_weight="2"
                                    android:background="@android:color/transparent"
                                    android:ems="10"
                                    android:hint="Confirm PIN"
                                    android:inputType="numberPassword"
                                    android:maxLength="5"

                                    android:textSize="14sp" />
                            </LinearLayout>


                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl5">

                            <Button
                                android:id="@+id/button2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dip"
                                android:layout_marginRight="30dp"
                                android:layout_marginBottom="10dip"
                                android:background="@drawable/mybutton"
                                android:filterTouchesWhenObscured="true"
                                android:padding="5dp"
                                android:text="Proceed"
                                android:textColor="@color/colorPrimary" />
                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>