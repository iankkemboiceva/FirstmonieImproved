<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActivateAgent"
    android:background="@color/greybg"
    android:orientation="vertical"
    android:filterTouchesWhenObscured ="true"
    tools:showIn="@layout/activity_activate_agent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_weight="0.3"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="216dp"
                android:background="@drawable/firstmoniewhite"
                android:layout_centerInParent="true"
                android:layout_height="50dp">

            </ImageView>
            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:layout_alignParentBottom="true"

                android:layout_centerHorizontal="true"
                android:text="Proceed to activate the Agent app with the following details"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.7"
        android:layout_height="0dp">


        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingBottom="5dip"
            android:paddingTop="1dip"



            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:id="@+id/rlotp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"

                    android:text="Enter OTP"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <EditText


                    android:id="@+id/otp"

                    android:textColor="@color/black"
                    android:digits="0123456789+"
                    android:ems="10"
                    android:maxLength="5"
                    android:inputType="numberPassword"

                    android:layout_gravity="left|center"


                    android:background="@drawable/edittxtbackground"
android:layout_below="@+id/txt2"
                    android:textColorHint="@color/grey"

                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"

                    android:layout_width="match_parent"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"

                    android:textSize="14sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"

                android:layout_marginRight="10dp"
                android:id="@+id/rlpin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"

                    android:text="Enter PIN"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <EditText


                    android:id="@+id/agentpin"

                    android:textColor="@color/black"
                    android:digits="0123456789+"
                    android:ems="10"
                    android:maxLength="5"
                    android:inputType="numberPassword"

                    android:layout_gravity="left|center"


                    android:background="@drawable/edittxtbackground"
                    android:layout_below="@+id/txt3"
                    android:textColorHint="@color/grey"

                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"

                    android:layout_width="match_parent"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"

                    android:textSize="14sp"/>
            </RelativeLayout>






        <RelativeLayout
            android:layout_width="wrap_content"
         android:layout_below="@+id/rlpin"
            android:id="@+id/mybutton"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/mybutton"
                android:padding="5dp"
                android:text="NEXT"
                android:filterTouchesWhenObscured ="true"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="20dip"
                android:textColor="@color/white" />
        </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"

         android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/resendbutt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/mybutton"
                android:padding="5dp"
                android:text="RESEND OTP"
                android:filterTouchesWhenObscured ="true"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="20dip"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
