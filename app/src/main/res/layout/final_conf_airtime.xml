<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="0dp">
            <LinearLayout


                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip"


                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl5">
                    <ImageView
                        android:id="@+id/imgg"
                        android:layout_width="30dp"
                        android:background="@drawable/success2"
                        android:layout_centerHorizontal="true"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="AIRTIME TRANSACTION SUCCESSFUL"
                        android:textColor="@color/fab_material_green_900"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"


                    >

                    <TextView
                        android:id="@+id/textViewnb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="Mobile Number:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize" />

                    <TextView
                        android:id="@+id/textViewnb2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"
                        android:text=""
                        android:textColor="#3C2415"
                        android:textSize="@dimen/textsize" />

                </RelativeLayout>


                <RelativeLayout


                    android:id="@+id/rlem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"


                    >

                    <TextView
                        android:id="@+id/textViewrd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="Amount:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize" />

                    <TextView
                        android:id="@+id/textViewrrs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"
                        android:text=""
                        android:textColor="#3C2415"
                        android:textSize="@dimen/textsize" />

                </RelativeLayout>

                <RelativeLayout


                    android:id="@+id/rlref"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"


                    >

                    <TextView
                        android:id="@+id/textViewrefcd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="Ref Code:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize" />

                    <TextView
                        android:id="@+id/txtrfcd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"
                        android:text=""
                        android:textColor="#3C2415"
                        android:textSize="@dimen/textsize" />

                </RelativeLayout>

                <RelativeLayout


                    android:id="@+id/rlgend"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"


                    >

                    <TextView
                        android:id="@+id/textViewr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:text="Telco Operator:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize" />

                    <TextView
                        android:id="@+id/textViewrr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="15dip"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize" />

                </RelativeLayout>
                <RelativeLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:id="@+id/rldatet"
                    android:layout_margin="5dp"


                    >
                    <TextView
                        android:id="@+id/textdatet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="Date \u0026 Time:"
                        android:textSize="@dimen/textsize"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/textfinaldatet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:layout_marginLeft="15dip"
                        android:layout_alignParentRight = "true"
                        android:text=""
                        android:textSize="@dimen/textsize"
                        android:textColor="@color/black" />

                </RelativeLayout>
                <RelativeLayout


                    android:id="@+id/rlagfee"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"


                    >

                    <TextView
                        android:id="@+id/textfee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="Fee:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize" />

                    <TextView
                        android:id="@+id/txtfee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize" />

                </RelativeLayout>

                <RelativeLayout


                    android:id="@+id/rltrref"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone"


                    >

                    <TextView
                        android:id="@+id/tref"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:text="Tran. Reference:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize" />

                    <TextView
                        android:id="@+id/txref"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="15dip"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize" />

                </RelativeLayout>

                <RelativeLayout


                    android:id="@+id/rlaccom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"


                    >

                    <TextView
                        android:id="@+id/accomm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="Agent Commision:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize" />

                    <TextView
                        android:id="@+id/txtaccom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"
                        android:text="\u20A6 0.00"
                        android:textColor="#3C2415"
                        android:textSize="@dimen/textsize" />

                </RelativeLayout>


                <RelativeLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/rlagname"

                    android:layout_margin="2dp"


                    >
                    <TextView
                        android:id="@+id/agname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="Served By:"
                        android:textSize="@dimen/textsize"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/txtgname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:layout_marginLeft="15dip"
                        android:layout_alignParentRight = "true"
                        android:text=""
                        android:textSize="@dimen/textsize"
                        android:textColor="#3C2415" />

                </RelativeLayout>

                <RelativeLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/rlagid"

                    android:layout_margin="2dp"


                    >
                    <TextView
                        android:id="@+id/agid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="Agent ID:"
                        android:textSize="@dimen/textsize"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/txtagid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:layout_marginLeft="15dip"
                        android:layout_alignParentRight = "true"
                        android:text=""
                        android:textSize="@dimen/textsize"
                        android:textColor="#3C2415" />

                </RelativeLayout>

                <RelativeLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/rlattid"

                    android:layout_margin="2dp"


                    >
                    <TextView
                        android:id="@+id/attid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="Attendant ID:"
                        android:textSize="@dimen/textsize"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/txtattid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:layout_marginLeft="15dip"
                        android:layout_alignParentRight = "true"
                        android:text=""
                        android:textSize="@dimen/textsize"
                        android:textColor="#3C2415" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"

                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:id="@+id/rlsave"

                        android:layout_weight="0.5"
                        android:layout_height="50dp">
                        <ImageView
                            android:id="@+id/agaccount"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/download3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/agaccount"
                            android:layout_marginTop="5dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp"
                            android:text="Save to Gallery"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:id="@+id/rlshare"

                        android:layout_height="50dp">
                        <View
                            android:layout_width="1dp"
                            android:background="@color/grey"
                            android:layout_height="50dp"></View>
                        <ImageView
                            android:id="@+id/commwall"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp"
                            android:background="@drawable/sharethislogo"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/commwall"
                            android:layout_marginTop="5dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp"
                            android:text="Share Receipt"/>
                    </RelativeLayout>

                    <Button
                        android:layout_width="0dp"
                        android:id="@+id/reportiss"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:visibility="gone"
                        android:text="BLUETOOTH PRINT"
                        android:textColor="@color/white"
                        android:background="@drawable/rectangle375"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:id="@+id/share_image"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:text="SHARE RECEIPT"
                        android:background="@drawable/rectangle375"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/rl5">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dip"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dip"
                        android:background="@drawable/mybutton"
                        android:backgroundTint="@color/dark_btncolor"
                        android:padding="5dp"
                        android:text="Go Home"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>



