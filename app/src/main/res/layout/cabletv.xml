<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:filterTouchesWhenObscured ="true"

    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/lay"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:id="@+id/lin"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="1"
                android:id="@+id/tv2"
                android:layout_weight="1"
                android:layout_marginTop="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/btn_theme_dark"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_theme_dark"
                android:layout_marginTop="18dp"
                android:textStyle="bold"
                android:id="@+id/tv"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:text="2"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:text="3"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_theme_paybills"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="4"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/btn_theme_dark"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_below="@+id/lin"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rlag"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"

                    android:text=""

                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingBottom="5dip"
                android:paddingTop="1dip"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/smcno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="2"
                        android:text="Smartcard Number"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/acc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="2"

                        android:background="@android:color/transparent"
                        android:hint="Smartcard Number"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/theme_paybills" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="2"
                        android:text="Amount (\u20A6)"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/amount"
                        android:layout_below="@+id/textView4"


                        android:ems="10"

                        android:inputType="numberDecimal"
                        android:layout_margin="10dp"
                        android:hint="Amount"


                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"

                        android:textSize="14sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/theme_paybills" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="2"
                        android:text="Narration"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/ednarr"
                        android:layout_below="@+id/textView5"


                        android:ems="10"

                        android:inputType="text"
                        android:layout_margin="10dp"
                        android:hint="Narration"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"

                        android:textSize="14sp"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout


                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingBottom="5dip"
                android:paddingTop="1dip"
                android:background="@color/white"


                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="2"
                        android:text="Payer Name"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/sendname"
                        android:layout_below="@+id/textView5"

                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"

                        android:ems="10"

                        android:inputType="text"

                        android:hint="Payer Name"


                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"

                        android:textSize="14sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/theme_paybills" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="2"
                        android:text="@string/sendnum"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/sendnumber"
                        android:layout_below="@+id/textView5"
                        android:layout_margin="5dip"
                        android:digits="0123456789+"
                        android:ems="10"
                        android:maxLength="13"
                        android:inputType="number"

                        android:hint="@string/sendnum"


                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"

                        android:textSize="14sp"/>
                </LinearLayout>
